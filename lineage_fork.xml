<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote name="github"
      fetch="https://github.com/shagbag913/" />
  <default revision="lineage-16.0"
      remote="github"
      sync-c="true"
      sync-j="8" />

  <!-- Remove LineageOS projects -->
  <remove-project name="LineageOS/android_frameworks_base" />
  <remove-project name="LineageOS/android_bootable_recovery" />
  <remove-project name="LineageOS/android_vendor_lineage" />
  <remove-project name="LineageOS/android_build" />

  <!-- Add forks -->
  <project path="build/make" name="lineage_build" groups="pdk" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="frameworks/base" name="lineage_frameworks_base" groups="pdk-cw-fs,pdk-fs" />
  <!-- TEMP: build error fix in review -->
  <project path="bootable/recovery" name="lineage_bootable_recovery" groups="pdk" />
  <project path="vendor/lineage" name="lineage_vendor_lineage" />

</manifest>
